1.(PRINT DIAGNOL ALPHABET)

class HelloWorld {
    public static void main(String[] args) {
        String a = "HARISH";
        int b=a.length();        
        for(int i =0;i<b;i++){
            for(int j = 0;j<b;j++){
                System.out.print(" ");
            }
            System.out.println(a.charAt(i));
        }
    }
}
---------------------------------------------------------
(OP)
H
 A
  R
   I
    S
     H
----------------------------------------------------------
2.class HelloWorld {
    public static void main(String[] args) {
        String str = "program";
        int l = str.length();
        
        for (int i = 0; i < l; i++) {
            for (int j = 0; j < l; j++) {
                // Check if the current position is on either diagonal
                if (j == i || j == (l - 1 - i)) {
                    System.out.print(str.charAt(j));
                } else {
                    System.out.print(" "); // Print space elsewhere
                }
            }
            System.out.println(); // Move to the next line after each row
        }
    }
}
--------------------------------------------------------------
(op)
p     m
 r   a 
  o r  
   g   
  o r  
 r   a 
p     m
=================================================================

